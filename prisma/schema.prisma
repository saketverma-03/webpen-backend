// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// code
model Project {
  id     String  @id @default(cuid())
  title  String
  html   String? @db.Text
  css    String? @db.Text
  js     String? @db.Text
  user   User    @relation(fields: [userId], references: [id])
  userId String
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  projects Project[]
}
